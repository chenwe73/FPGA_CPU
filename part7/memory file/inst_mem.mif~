WIDTH = 32;
DEPTH = 128;
ADDRESS_RADIX = HEX;
DATA_RADIX = BIN;

CONTENT BEGIN

-- SW
	00	:	0010000000000000;	-- mvi R0
	01	:	1000000000000000;	-- SW
	02	:	1000010000000000;	-- ld R1 R0
	
	03	:	0010000000000000;	-- mvi R0
	04	:	0001000000000000;	-- LED
	05	:	1010010000000000;	-- st R1, R0
	
	06	:	0010000000000000;	-- mvi R0
	07	:	0100000000000000;	-- HEX0
	08	:	1010010000000000;	-- st R1, R0
	
	09	:	0010000000000000;	-- mvi R0
	0A	:	0101000000000000;	-- HEX1
	0B	:	1010010000000000;	-- st R1, R0
	
	0C	:	0010000000000000;	-- mvi R0
	0D	:	0110000000000000;	-- HEX2
	0E	:	1010010000000000;	-- st R1, R0
	
	0F	:	0010000000000000;	-- mvi R0
	10	:	0111000000000000;	-- HEX3
	11	:	1010010000000000;	-- st R1, R0
	
	12	:	0011110000000000;	-- mvi R7
	13	:	0000000000000000;	--

%
-- HEX
	00	:	0010000000000000;	-- mvi R0
	01	:	0010000000000000;	-- 
	02	:	0010010000000000;	-- mvi R1
	03	:	0000000000001111;	-- 
	04	:	0000000000000000;	-- 
	05	:	1010010000000000;	-- st R2, R0
	06	:	0011110000000000;	-- mvi R7
	07	:	0000000000000000;	--


-- LED
	00	:	0010000000000000;	-- mvi R0
	01	:	0001000000000000;	-- 
	02	:	0010010000000000;	-- mvi R1
	03	:	0000000000000001;	-- 
	04	:	0100100010000000;	-- add R2,R1
	05	:	1010100000000000;	-- st R2, R0
	06	:	0011110000000000;	-- mvi R7
	07	:	0000000000000000;	--

	
	00	:	0010000000000000;	-- mvi R0
	01	:	0001000000010000;	-- 0x10
--	02	:	1010000000000000;	-- st R0, R0
	02	:	0100110010000000;	-- add R3,R1
	03	:	1100000010000000;	-- mvnz R0 <-- [R1]
	04	:	1010000000000000;	-- st R0, R0
	05	:	1000000000000000;	-- ld R0, R0
	06	:	0000010000000000;	-- mv R1 <-- [R0]
	07	:	0100000010000000;	-- add R0,R1
	08	:	0110000000000000;	-- sub R0,R0
	09	:	0001110000000000;	-- mv R7 <-- [R0]

	10	:	1100110001110011;
